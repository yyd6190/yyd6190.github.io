<article class="article">
  <div class="article-header">
    <h1 class="article-title">
      <a href="<%= url_for(post.path) %>"><%= post.title %></a>
    </h1>
    <div class="article-meta">
      <span class="article-date">
        <i class="icon-calendar"></i>
        <%= date(post.date, 'YYYY-MM-DD') %>
      </span>
      <% if (post.categories && post.categories.length) { %>
        <span class="article-categories">
          <i class="icon-folder"></i>
          <%- list_categories(post.categories, { show_count: false, class: 'article-category', style: 'none', separator: ',' }) %>
        </span>
      <% } %>
      <% if (post.tags && post.tags.length) { %>
        <span class="article-tags">
          <i class="icon-tag"></i>
          <%- list_tags(post.tags, { show_count: false, class: 'article-tag', style: 'none', separator: ',' }) %>
        </span>
      <% } %>
    </div>
  </div>
  <div class="article-content">
    <% if (post.excerpt && index){ %>
      <%- post.excerpt %>
      <div class="article-more-link">
        <a href="<%- url_for(post.path) %>">阅读全文 <i class="icon-right-arrow"></i></a>
      </div>
    <% } else { %>
      <%- post.content %>
      <% if (!index && post.tags && post.tags.length) { %>
        <div class="article-tags-wrap">
          <i class="icon-tags"></i> 标签:
          <%- list_tags(post.tags, { show_count: false, class: 'article-tag', style: 'link', separator: '' }) %>
        </div>
      <% } %>
    <% } %>
  </div>
</article>